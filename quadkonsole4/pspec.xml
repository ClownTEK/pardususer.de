    <Package>
        <Name>quadkonsole4</Name>
        <RuntimeDependencies>
            <Dependency>kdelibs</Dependency>
            <Dependency>qt</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="executable">/usr/bin/*</Path>
            <Path fileType="library">/usr/lib/kde4/qkremotepart.so</Path>
            <Path fileType="data">/usr/share/applications/kde4/*</Path>
            <Path fileType="config">/usr/share/config.kcfg/quadkonsole4.kcfg</Path>
            <Path fileType="doc">/usr/share/doc</Path>
